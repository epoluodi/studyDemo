<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back"
    tools:context="com.yangxiaoguang.www.studydemo.ResultActivity">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:text="书名"
            android:textColor="@color/bisque"

            android:textSize="24dp" />

        <EditText
            android:id="@+id/bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="记录你喜爱的书名"
            android:lines="1"
            android:paddingLeft="110dp"

            android:textColor="@color/white"
            android:textColorHint="@color/black1"
            android:textSize="28dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:text="总页数"
            android:textColor="@color/bisque"

            android:textSize="24dp" />

        <EditText
            android:id="@+id/pages"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:hint="你爱书总页数"
            android:inputType="number"

            android:lines="1"
            android:paddingLeft="110dp"
            android:textColor="@color/white"
            android:textColorHint="@color/black1"
            android:textSize="28dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:text="书签页"
            android:textColor="@color/bisque"

            android:textSize="24dp" />

        <EditText
            android:id="@+id/nowpages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="你看了多少页"
            android:inputType="number"
            android:lines="1"
            android:paddingLeft="110dp"

            android:textColor="@color/white"
            android:textColorHint="@color/black1"
            android:textSize="28dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="right"
            android:text="藏书地"
            android:textColor="@color/bisque"

            android:textSize="24dp" />

        <EditText
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="藏书的位置"
            android:lines="1"
            android:paddingLeft="110dp"

            android:textColor="@color/white"
            android:textColorHint="@color/black1"
            android:textSize="28dp" />
    </RelativeLayout>

    <ImageView
        android:clickable="true"
        android:id="@+id/p1"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_below="@+id/r4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/book_back"
        android:src="@mipmap/book" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnsave"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:text="确定"
        android:textSize="20dp" />


</RelativeLayout>
